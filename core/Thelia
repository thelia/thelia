use Symfony\Component\Dotenv\Dotenv;
use Thelia\Core\Application;
use Thelia\Core\Thelia;
use Thelia\Install\KernelInstall;

if (!isset($bootstrapFile)) {
    $bootstrapFile = dirname(__DIR__) . '/vendor/autoload_runtime.php';
}

if (!is_dir(dirname(__DIR__).'/vendor')) {
    throw new LogicException('Dependencies are missing. Try running "composer install".');
}

if (!is_file($bootstrapFile)) {
    throw new LogicException('Symfony Runtime is missing. Try running "composer require symfony/runtime".');
}

require_once $bootstrapFile;

if (!class_exists(Application::class)) {
    throw new LogicException('You need to add "symfony/framework-bundle"  as Composer dependencies.');
}

return static function (array $context) {
    if (!Thelia::isInstalled()) {
        $kernel = new KernelInstall($context['APP_ENV'], (bool) $context['APP_DEBUG']);
    } else {
        $kernel = new App\Kernel($context['APP_ENV'], (bool) $context['APP_DEBUG']);
    }
    return new Application($kernel);
};
