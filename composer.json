{
    "name": "thelia/thelia",
    "description": "Thelia is an ecommerce CMS.",
    "license": "GPL-3.0-or-later",
    "homepage": "http://thelia.net/",
    "keywords": [
        "ecommerce",
        "cms",
        "cms ecommerce",
        "ecommerce cms"
    ],
    "support": {
        "forum": "http://thelia.net/forum",
        "wiki": "http://doc.thelia.net"
    },
    "repositories": [
        {
            "type": "path",
            "url": "core/"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "thelia/core": "dev-twig",
        "thelia/backoffice-default-template": "dev-twig",
        "thelia/email-default-template": "dev-twig",
        "thelia/pdf-default-template": "dev-twig",
        "symfony/flex": "^2.4",
        "thelia/flexy": "dev-twig",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "thelia/customer-family-module": "dev-twig"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.*",
        "phpstan/phpstan": "2.*",
        "phpstan/extension-installer": "1.*",
        "phpunit/phpunit": "11.5.*",
        "rector/rector": "^2.0",
        "symfony/browser-kit": "6.4.*",
        "symfony/phpunit-bridge": "6.4.*",
        "symfony/css-selector": "6.4.*",
        "symfony/debug-bundle": "6.4.*",
        "thelia/web-profiler-module": "dev-twig"
    },
    "scripts": {
        "phpc": [
            "APP_ENV=test php -d post_max_size=20M"
        ],
        "thelia-install": [
            "@phpc Thelia thelia:install -n --database_host=db --database_username=db --database_password=db --database_name=db--database_port=3306 -frontoffice_theme=flexy --backoffice_theme=default --pdf_theme=default --email_theme=default"
        ],
        "demo-database": [
            "@thelia-install",
            "@phpc Thelia thelia:demo:import --skip-images",
            "@phpc Thelia admin:create --login_name thelia --password thelia --last_name thelia --first_name thelia --email thelia@example.com"
        ],
        "cs-diff": [
            "@phpc ./vendor/bin/php-cs-fixer fix --dry-run --stop-on-violation --diff"
        ],
        "cs": [
            "@phpc ./vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php"
        ],
        "phpstan": [
            "@phpc ./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=-1"
        ],
        "unit": [
            "@phpc ./vendor/bin/phpunit --configuration phpunit.xml.dist --testsuit unit"
        ],
        "test": [
            "@cache-clear",
            "@demo-database",
            "@unit"
        ],
        "ci": [
            "@cs-diff",
            "@phpstan",
            "@test"
        ],
        "csi": [
            "@cs-diff",
            "@ci"
        ],
        "cache-clear": [
            "rm -Rf var/cache/*"
        ],
        "assets-install": [
            "php Thelia assets:install web"
        ],
        "post-install-cmd": [
            "@cache-clear",
            "php bin/console lexik:jwt:generate-key --skip-if-exists"
        ],
        "post-update-cmd": [
            "@cache-clear"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "": [
                "local/modules/",
                "vendor/thelia/modules"
            ],
            "App\\": "src/",
            "FlexyBundle\\": "templates/frontOffice/flexy/src/",
            "Thelia\\": "core/lib/Thelia"
        },
        "files": [
            "core/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Thelia\\Tests\\Unit\\": "tests/Unit",
            "Thelia\\Tests\\Functional\\": "tests/Functional",
            "Thelia\\Tests\\": "tests/Legacy"
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.4.*",
            "endpoint": [
                "https://api.github.com/repos/thelia/thelia-recipes/contents/index.json?ref=main",
                "flex://defaults"
            ]
        },
        "installer-paths": {
            "vendor/{$vendor}/modules/{$name}": [
                "type:thelia-module"
            ],
            "templates/email/{$name}": [
                "type:thelia-email-template"
            ],
            "templates/pdf/{$name}": [
                "type:thelia-pdf-template"
            ],
            "local/": [
                "type:thelia-local"
            ],
            "templates/frontOffice/{$name}": [
                "type:thelia-flexy"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "thelia/installer": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "composer/installers": true
        }
    }
}
