{
    "name": "thelia/thelia",
    "description": "Thelia is an ecommerce CMS.",
    "license": "GPL-3.0-or-later",
    "homepage": "http://thelia.net/",
    "keywords": [
        "ecommerce",
        "cms",
        "cms ecommerce",
        "ecommerce cms"
    ],
    "support": {
        "forum": "http://thelia.net/forum",
        "wiki": "http://doc.thelia.net"
    },
    "repositories": [
        {
            "type": "path",
            "url": "core/"
        },
        {
            "type": "path",
            "url": "templates/frontOffice/flexy/"
        }
    ],
    "require": {
        "php": ">= 8.2",
        "thelia/core": "dev-twig",
        "thelia/flexy": "dev-twig",
        "thelia/backoffice-default-template": "dev-twig",
        "thelia/email-default-template": "dev-twig",
        "thelia/pdf-default-template": "dev-twig",
        "thelia/virtual-product-control-module": "dev-main",
        "thelia/virtual-product-delivery-module": "dev-main",
        "thelia/custom-delivery-module": "dev-main",
        "thelia/cheque-module": "dev-main",
        "thelia/free-order-module": "dev-main",
        "symfony/flex": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*",
        "symfony/browser-kit": "6.4.*",
        "symfony/phpunit-bridge": "6.4.*",
        "phpstan/phpstan": "1.8.2",
        "phpstan/extension-installer": "1.1.0",
        "symfony/css-selector": "6.4.*",
        "friendsofphp/php-cs-fixer": "3.41.*",
        "symfony/debug-bundle": "6.4.*"
    },
    "scripts": {
        "cs-diff": [
            "./vendor/bin/php-cs-fixer fix --dry-run --stop-on-violation --diff"
        ],
        "cs": [
            "./vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist.php"
        ],
        "phpstan": [
            "php ./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=-1"
        ],
        "test-unit": [
            "./vendor/bin/phpunit --configuration phpunit.xml.dist --testsuit unit"
        ],
        "demo-database": [
            "php Thelia thelia:dev:reloadDB -f",
            "php setup/import.php",
            "php Thelia admin:create --login_name thelia --password thelia --last_name thelia --first_name thelia --email thelia@example.com"
        ],
        "test-functional": [
            "./vendor/bin/phpunit --configuration phpunit.xml.dist --testsuit functional"
        ],
        "test-legacy": [
            "php Thelia module:activate CustomDelivery -s",
            "php Thelia module:activate Cheque -s",
            "php Thelia module:activate HookTest -s",
            "php Thelia module:activate VirtualProductDelivery -s",
            "./vendor/bin/phpunit --configuration phpunit.legacy.xml"
        ],
        "test": [
            "@demo-database",
            "@test-unit",
            "@test-functional"
        ],
        "ci": [
            "@cs-diff",
            "@phpstan"
        ],
        "cache-clear": [
            "rm -Rf var/cache/*"
        ],
        "assets-install": [
            "php Thelia assets:install web"
        ],
        "pre-install-cmd": [
            "mkdir -p templates/frontOffice/flexy/"
        ],
        "pre-update-cmd": [
            "mkdir -p templates/frontOffice/flexy/"
        ],
        "post-install-cmd": [
            "cp -r vendor/thelia/flexy templates/frontOffice",
            "cp -r vendor/thelia/flexy templates/frontOffice",
            "@cache-clear",
            "@assets-install",
            "php bin/console lexik:jwt:generate-key --skip-if-exists"
        ],
        "post-update-cmd": [
            "cp -r --remove-destination vendor/thelia/flexy templates/frontOffice",
            "@cache-clear",
            "@assets-install"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Thelia\\": "core/lib/Thelia",
            "": [
                "local/modules/"
            ],
            "App\\": "src/"
        },
        "files": [
            "core/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Thelia\\Tests\\Unit\\": "tests/Unit",
            "Thelia\\Tests\\Functional\\": "tests/Functional",
            "Thelia\\Tests\\": "tests/Legacy"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4-dev"
        },
        "symfony": {
            "allow-contrib": true,
            "endpoint": [
                "https://api.github.com/repos/YannLe/thelia-test-recipes/contents/index.json?ref=flex/main",
                "flex://defaults"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "thelia/installer": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "composer/installers": true
        }
    }
}
