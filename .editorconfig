; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,html,json}]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 160

[COMMIT_EDITMSG]
max_line_length = 0

[*.php]
max_line_length = 120
